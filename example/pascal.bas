10 REM PASCAL'S TRIANGLE
15 DIM V(100)
20 INPUT "NUMBER OF ROWS"; N
25 FOR T = 1 TO N
30 PRINT " ": NEXT T
35 PRINT 1: PRINT
40 LET V(1) = 1
45 FOR R = 2 TO N
50 PRINT: PRINT
55 FOR T = 1 TO (N - R) + 1
60 PRINT " ": NEXT T
65 PRINT " "
70 FOR I = R TO 1 STEP -1
75 LET V(I) = V(I) + V(I-1)
80 PRINT V(I), " "
85 NEXT I
90 PRINT
95 NEXT R
100 END